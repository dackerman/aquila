{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "@aquila/core": ["../core/src"],
      "@aquila/data": ["../data/src"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../core" },
    { "path": "../data" }
  ]
}